<h1>Schedule A Tweet</h1>

<%= form_with model: @tweet do |form| %>
  <div class="mb-3">
    <%= form.label :twitter_acount_id %>
    <%= form.collection_select :twitter_acount_id, Current.user.twitter_accounts, :id, :username, {}, {class: "form-control"} %>
    <%= link_to "Connect your twitter account", "/auth/twitter", method: :post %>
  </div>

  <div class="mb-3">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :publish_at %>
    <div class="form-control">
      <%= form.datetime_select :publish_at %>
    </div>
  </div>
<% end %>